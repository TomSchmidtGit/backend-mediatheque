{
  "name": "backend-mediatheque",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js --runInBand --forceExit",
    "test:watch": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js --watch --runInBand",
    "test:coverage": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js --coverage --runInBand --forceExit",
    "test:ci": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js --ci --coverage --runInBand --forceExit",
    "test:debug": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js --inspect-brk --runInBand",
    "test:fix": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js --runInBand --forceExit --verbose --detectOpenHandles",
    "seed": "node scripts/seedTestData.js",
    "seed:dev": "NODE_ENV=development node scripts/seedTestData.js",
    "seed:prod": "NODE_ENV=production node scripts/seedProductionData.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.7",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "middlewares/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "utils/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true,
    "maxWorkers": 1,
    "bail": false,
    "detectOpenHandles": true,
    "forceExit": true
  }
}
